---
import { getCollection } from "astro:content";

const items = await getCollection("news");

// sort: najnowsze pierwsze (po stringu ISO zwykle działa dobrze)
items.sort((a, b) => (a.data.date < b.data.date ? 1 : -1));
---

<h1>News</h1>

<ul>
  {items.map((i) => (
    <li>
      <a href={`/news/${i.slug}`}>{
        /* tu nie renderujemy markdown title, żeby było prosto w liście */
        i.slug
      }</a>
      <small> — {i.data.date}</small>
    </li>
  ))}
</ul>