---
import H1 from "../components/h1.astro";
import Link from "../components/link.astro";
import Navigation from "../components/navigation";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center">
			<div class="absolute w-full h-dvh -z-10">
				<WarpBackground
					color1="#09090b"
					color2="#27272a"
					color3="#52525b"
					speed={0.6}
					swirl={0.5}
					swirlIterations={10}
					shapeScale={0.3}
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">
				<div>
					<H1 size="large"> Jan Pawe≈Ç Przegendza </H1>
				</div>

				<div>
					<div class="mb-2 sm:mb-4 flex items-center justify-between">
						<div class="flex items-center gap-4">
							<Link href="/works">Works</Link>
							<Link href="/about" variant="secondary">About</Link>
						</div>

						<Navigation client:load>
							<Link href="/works" variant="secondary">Works</Link>
							<Link href="/about" variant="secondary">About</Link>
							<Link href="/events" variant="secondary">Events</Link>
							<Link href="/news" variant="secondary">News</Link>
							<Link href="/photos" variant="secondary">Photos</Link>
							<Link href="/media" variant="secondary">Media</Link>
							<Link href="/contact" variant="secondary">Contact</Link>
						</Navigation>
					</div>
				</div>
			</div>
		</div>
	</main>
</RootLayout>
